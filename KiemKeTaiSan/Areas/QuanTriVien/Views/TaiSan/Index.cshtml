            "ordering": false,
            responsive: true,
            paging: true,
        });


        var Table_LTS = $('#table_loaitaisan').DataTable({
            "ordering": false,
            responsive: true,
            paging: true,
        });

        LoadData_LoaiTaiSan(Table_LTS);
