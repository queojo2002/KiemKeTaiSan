@model IEnumerable<KiemKeTaiSan.Models.LoaiPhong>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/QuanTriVien/Views/Shared/_LayoutQTV.cshtml";
}



<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">
                    Danh sách các loại phòng hiện có tại trường!
                    <a href="#" data-bs-toggle="modal" data-bs-target="#add-new-task-modal" class="btn btn-success btn-sm ms-3">Thêm mới loại phòng</a>
                </h4>
                <ul class="nav nav-tabs nav-bordered mb-3">
                </ul>
                <!-- end nav-->
                <div class="tab-content">
                    <div class="tab-pane show active" id="basic-datatable-preview">
                        <div id="basic-datatable_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table style="text-align:center" id="basic-datatable" class="table dt-responsive nowrap w-100">
                                        <thead>
                                            <tr>
                                                <th>Tên phòng</th>
                                                <th>Ghi chú</th>
                                                <th>Ngày cập nhật cuối cùng</th>
                                                <th>Hành động</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.TenLP)</td>
                                                <td>@Html.DisplayFor(modelItem => item.GhiChu)</td>
                                                <td>
                                                    @*Định dạng hiển thị*@ @Html.FormatValue(@item.NgayCapNhat, "{0:dd/MM/yyyy}")
                                                </td>
                                                <td class="table-action">
                                                    <a href="javascript: void(0);" class="action-icon"> <i class="mdi mdi-pencil"></i></a>
                                                    <a href="javascript: void(0);" class="action-icon"> <i class="mdi mdi-delete"></i></a>
                                                </td>
                                            </tr>

                                            }



                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!--  Add new task modal -->
<div class="modal fade task-modal-content" id="add-new-task-modal" tabindex="-1" role="dialog" aria-labelledby="NewTaskModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="NewTaskModalLabel">THÊM MỚI LOẠI PHÒNG</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="p-2"> 
                    <div class="mb-3">
                        <label for="task-title" class="form-label">Tên loại phòng: </label>
                        <input type="text" class="form-control form-control-light" id="task-title" placeholder="Tên loại phòng?">
                    </div>
                    <div class="mb-3">
                        <label for="task-description" class="form-label">Ghi chú: </label>
                        <textarea class="form-control form-control-light" id="task-description" rows="3"></textarea>
                    </div>   

                    <div class="text-end">
                        <button type="button" class="btn btn-light" onclick = "close_modal()" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>
    function close_modal() {
        $('#add-new-task-modal').modal('hide');
    }
    
</script>